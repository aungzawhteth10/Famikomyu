{% include 'base.html' %}
<div id="video_div" style="width:300px; height:200px;"></div>
<script >
	var loginForm = {
		view:"form",
		id:"loginForm",
		borderless:true,
        elements:[
            {cols:[
            	{},
            	{width:340, rows:[
            		{cols:[
	            		{view:"button", value:"Run Video", css:"webix_primary", id:"login", height:50},
	            	]},
	            	{cols:[
	            		{view:"button", value:"Close Video", css:"webix_primary", id:"close", height:50},
	            	]}
            	]},
            	{}
            ]}
        ]};
        var video = webix.ui({
			    view:"video",
			    container:"video_div",
			    id:"video1", 
			    src: [
			        "C:/Users/aungz/Desktop/workspace/Karaoke/SakuraKaraoke/v3.2/release/bk/a7908.mp4"
			    ]
			});
	webix.ui(
		{rows:[
			loginForm
		]}
	);
	$$("login").attachEvent("onItemClick", open);
	$$("close").attachEvent("onItemClick", close);
	//ログイン／登録切り替え
	function changeTab(){
		var click = $$("tabbar").getValue();
		if(click == "login"){
			$$("signUpForm").hide();
			$$("loginForm").show();
		}else if(click == "signUp"){
			$$("loginForm").hide();
			$$("signUpForm").show();
		}
	};
	//ログインボタン押下時
	function open(){
		webix.message("open is clicked");
		$.get("runVideo", {}, function(data){
			webix.message(data);
		});
	}
	function close(){
		webix.message("close is clicked");
		$.get("closeVideo");
	}       
</script>